include ../mixins
doctype html
html(lang="ru-RU")
    head
        meta(charset="utf-8")
        title Soulvibes
        <!--[if IE]>
        meta(http-equiv='X-UA-Compatible', content="IE = edge")
        <![endif]-->
        meta(name="viewport" content="width=device-width,initial-scale=1")
        meta(name="keywords" content="")

        link(rel="stylesheet" type='text/css' href="static/css/main.css")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,700,900")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lora:400,700")

        <!--[if lt IE 9]>
        script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
        <![endif]-->
        body
            include ../modules/header
            section.player
            section.stations
                .stations__title-wrapper(style="display: flex;")
                    .stations__line
                    .stations__title-content
                        h2.stations__title genres stations
                    .stations__line.stations__line--none
                .stations__wrapper
                    .stations__list
                        .stations__item
                            .stations__icon
                                +icon('trending', 'stations__trending')
                            span.stations__station-genre trending top
                        .stations__item
                            .stations__icon
                                +icon('rock', 'stations__rock')
                            span.stations__station-genre rock
                        .stations__item
                            .stations__icon
                                +icon('rnb', 'stations__rnb')
                            span.stations__station-genre R n B
                        .stations__item
                            .stations__icon
                                +icon('alternative', 'stations__alternative')
                            span.stations__station-genre alternative
                        .stations__item
                            .stations__icon
                                +icon('country', 'stations__country')
                            span.stations__station-genre country
                        .stations__item
                            .stations__icon
                                +icon('pop', 'stations__pop')
                            span.stations__station-genre pop
                        .stations__item
                            .stations__icon
                                +icon('jazz', 'stations__jazz')
                            span.stations__station-genre jazz
                        .stations__item
                            .stations__icon
                                +icon('reggae', 'stations__reggae')
                            span.stations__station-genre reggae
                    a.btn(href="#")
                        button.btn__load-more(href="#") load more
            
        script(src="static/js/jquery.js")
        script(src="static/js/libs.min.js")
        script(src="static/js/main.js")
